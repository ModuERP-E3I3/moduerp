package com.e3i3.moduerp.buystock.controller;

import com.e3i3.moduerp.buystock.model.BuyStockIn;
import com.e3i3.moduerp.buystock.model.BuyStockOut;
import com.e3i3.moduerp.buystock.service.StockService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/stocks")
public class StockController {

    @Autowired
    private StockService stockService;

    // 입고 추가
    @PostMapping("/in")
    public BuyStockIn addStockIn(@RequestBody BuyStockIn stockIn) {
        return stockService.addStockIn(stockIn);
    }

    // 입고 조회
    @GetMapping("/in/{id}")
    public BuyStockIn getStockIn(@PathVariable String id) {
        return stockService.getStockInById(id);
    }

    // 입고 목록 조회
    @GetMapping("/in")
    public List<BuyStockIn> getAllStockIns() {
        return stockService.getAllStockIns();
    }

    // 입고 수정
    @PutMapping("/in/{id}")
    public BuyStockIn updateStockIn(@PathVariable String id, @RequestBody BuyStockIn stockIn) {
        return stockService.updateStockIn(id, stockIn);
    }

    // 입고 삭제
    @DeleteMapping("/in/{id}")
    public void deleteStockIn(@PathVariable String id) {
        stockService.deleteStockIn(id);
    }

    // 출고 추가
    @PostMapping("/out")
    public BuyStockOut addStockOut(@RequestBody BuyStockOut stockOut) {
        return stockService.addStockOut(stockOut);
    }

    // 출고 조회
    @GetMapping("/out/{id}")
    public BuyStockOut getStockOut(@PathVariable String id) {
        return stockService.getStockOutById(id);
    }

    // 출고 목록 조회
    @GetMapping("/out")
    public List<BuyStockOut> getAllStockOuts() {
        return stockService.getAllStockOuts();
    }

    // 출고 수정
    @PutMapping("/out/{id}")
    public BuyStockOut updateStockOut(@PathVariable String id, @RequestBody BuyStockOut stockOut) {
        return stockService.updateStockOut(id, stockOut);
    }

    // 출고 삭제
    @DeleteMapping("/out/{id}")
    public void deleteStockOut(@PathVariable String id) {
        stockService.deleteStockOut(id);
    }
}
